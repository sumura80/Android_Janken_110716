<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_result"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.susumupc.janken.ResultActivity">

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/result_label" />

    <Button
        android:text="@string/buck_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        style="@style/back_text"
        android:onClick="onBackButtonTapped" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:srcCompat="@android:drawable/screen_background_light"
        android:id="@+id/my_hand_image"
        android:layout_above="@+id/com_hand_image"
        android:layout_alignLeft="@+id/com_hand_image"
        android:layout_alignStart="@+id/com_hand_image"
        android:layout_marginBottom="27dp" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="230dp"
        app:srcCompat="@android:drawable/screen_background_light"
        android:id="@+id/com_hand_image"
        android:layout_below="@+id/result_label"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" />
</RelativeLayout>
